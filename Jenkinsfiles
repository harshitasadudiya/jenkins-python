pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
             checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/harshitasadudiya/jenkins-python.git']])
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Install dependencies using the requirements.txt file'
                sh 'pip install -r requirements.txt'
               
            }
        }

       
    }
}
